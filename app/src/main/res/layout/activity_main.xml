<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jatekoskep"
        android:src="@drawable/rock"
        android:layout_centerHorizontal="true"

        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jatekoskep"
        android:text="A te választásod"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/jatekosfelirat"
        ></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gepkep"
        android:src="@drawable/rock"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/jatekosfelirat"

        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gepkep"
        android:text="A gép választása"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/gepfelirat"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gepfelirat"
        android:text="Eredmény: Ember 0 Computer: 0"
        android:id="@+id/eredmenyfelirat"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/eredmenyfelirat"
        android:layout_marginTop="10sp"
        android:gravity="center"


        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kő"
            android:id="@+id/kogomb"


            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Papír"
            android:id="@+id/papirgomb"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olló"
            android:id="@+id/ollogomb"/>




    </LinearLayout>






</RelativeLayout>